<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   app:cardBackgroundColor="@color/greyClaro"
                                   app:cardCornerRadius="16dp"

                                   android:layout_margin="8dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

        <TextView
                android:id="@+id/textViewCreadoPor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Creado por: Pepito" />

        <TextView
                android:id="@+id/tvDeporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Partido de Tenis" />

        <TextView
                android:id="@+id/tvHorario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horario: Por la maÃ±ana" />

        <TextView
                android:id="@+id/tvNivelOponente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Casi bueno (3.5 - 7.0)" />

    </LinearLayout>

</androidx.cardview.widget.CardView>