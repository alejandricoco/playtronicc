<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/grey"
                                                   tools:context=".fragments.fragmentsMenu.GlobalFragment">


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginRight="12.5dp"
            android:layout_marginLeft="12.5dp"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.1" android:id="@+id/cardView2">

        <ImageView
                android:id="@+id/fotillo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>


    <TextView
            android:id="@+id/titulillo"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Titulillo de campeonato de la liga de la justicia"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:fontFamily="@font/robotoregular"
            android:textSize="25sp"
            android:textColor="@color/white" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.05">
    </TextView>

    <TextView
            android:id="@+id/fechilla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/06/2024"
            android:fontFamily="@font/robotoregular"
            android:textSize="19sp"
            android:textColor="@color/yellow" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulillo"
            app:layout_constraintVertical_bias="0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.1">
    </TextView>

    <TextView
            android:id="@+id/cuerpillo"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="• Lunes a Viernes: 8:00 h - 22:00 h\n• Fines de semana: 9:00h - 21:00h\n\nEl horario del club puede variar en días festivos"
            android:fontFamily="@font/robotoregular"
            android:textSize="19sp"
            android:textColor="@color/white" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fechilla" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.1">
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>