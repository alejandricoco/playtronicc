<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/grey"
                                                   tools:context=".fragments.fragmentsMenu.FragmentNivelSuccess">

    <ProgressBar
            android:id="@+id/progressBarNivel"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:indeterminate="true"
            android:visibility="visible"
            android:layout_gravity="center" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.44"/>

    <TextView
            android:text="Calculando nivel..."
            android:fontFamily="@font/robotomedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvCalculandoNivel"
            android:textSize="24sp" android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBarNivel" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.02"
            app:layout_constraintHorizontal_bias="0.52"/>

    <Button
            android:id="@+id/buttonAceptarNivelSuccess"
            android:text="@string/aceptar"
            android:textAllCaps="false"
            android:layout_width="320dp"
            android:layout_height="62dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.9"
            android:paddingLeft="20dp" android:paddingRight="20dp"
            android:fontFamily="@font/robotomedium"
            android:backgroundTint="@color/button_amarillo_pressed"
            android:textColor="#000000" android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.5"
            style="@style/RoundButton"
            android:letterSpacing="0.009"
            android:visibility="invisible"/>

    <ImageView
            android:src="@drawable/troniclogosolo"
            android:layout_width="300dp"
            android:layout_height="85dp" android:id="@+id/tronicLogo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.05"/>
    <TextView
            android:text="@string/tituloLvlObtenido"
            android:fontFamily="@font/robotomedium"
            android:layout_width="350dp"
            android:layout_height="wrap_content" android:id="@+id/tvTitulito"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.22" app:layout_constraintHorizontal_bias="0.75"
            android:textSize="27sp" android:textColor="#FFFFFF"
            android:visibility="invisible"/>
    <TextView
            android:layout_width="327dp"
            android:layout_height="220dp"
            android:text="@string/cuerpoLvlObtenido"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:id="@+id/tvCuerpoLvlObtenido"
            android:fontFamily="@font/robotoregular"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.385" app:layout_constraintHorizontal_bias="0.43"
            android:visibility="invisible" android:layout_marginLeft="23dp"/>

    <ImageView
            android:src="@drawable/baseline_auto_graph_24"
            app:tint="@color/yellow"
            android:layout_width="300dp"
            android:layout_height="200dp" android:id="@+id/logoNivelObtenido"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.75"
            app:layout_constraintHorizontal_bias="0.5"
            android:visibility="invisible"/>


</androidx.constraintlayout.widget.ConstraintLayout>