<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/grey"
                                                   tools:context=".fragments.fragmentsMenu.FragmentContacto">


    <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacto"
            android:fontFamily="@font/robotomedium"
            android:textSize="30sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.055"
            app:layout_constraintVertical_bias="0.09">
    </TextView>

    <androidx.cardview.widget.CardView
            android:id="@+id/cardViewMap"
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_height="300dp"
            android:background="@color/greyClaro"
            android:backgroundTint="@color/greyClaro"
            app:cardCornerRadius="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05">

        <org.osmdroid.views.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <ImageView
            android:src="@drawable/cartago"
            android:layout_width="300dp"
            android:layout_height="70dp" android:id="@+id/cartagoLogo"
            app:layout_constraintTop_toBottomOf="@+id/cardViewMap"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/card_llamada"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="50dp"
            android:background="@color/greyClaro"
            android:backgroundTint="@color/greyClaro"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/cartagoLogo"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0.15">


        <ImageView
                android:src="@drawable/llamadaicon"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/llamadaLogo"
                app:layout_constraintTop_toBottomOf="@+id/cardViewMap"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/card_whatsapp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="50dp"
            android:background="@color/greyClaro"
            android:backgroundTint="@color/greyClaro"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/cartagoLogo"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0.385">


        <ImageView
                android:src="@drawable/wasap"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12.5dp"
                android:id="@+id/whatsappLogo"
                app:layout_constraintTop_toBottomOf="@+id/cardViewMap"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/card_email"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="50dp"
            android:background="@color/greyClaro"
            android:backgroundTint="@color/greyClaro"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/cartagoLogo"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0.613">


        <ImageView
                android:src="@drawable/emailicono"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/emailLogo"
                app:layout_constraintTop_toBottomOf="@+id/cardViewMap"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/card_ubicacion"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="50dp"
            android:background="@color/greyClaro"
            android:backgroundTint="@color/greyClaro"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/cartagoLogo"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0.85">


        <ImageView
                android:src="@drawable/locationnn"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ubicacionLogo"
                app:layout_constraintTop_toBottomOf="@+id/cardViewMap"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"/>

    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/tvHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horario"
            android:fontFamily="@font/robotomedium"
            android:textSize="25sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/card_llamada"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.15"
            app:layout_constraintHorizontal_bias="0.1">
    </TextView>

    <androidx.cardview.widget.CardView
            android:id="@+id/card_descripcionHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            android:background="@color/greyClaro"
            android:backgroundTint="@color/greyClaro"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tvHorario" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.18">

        <TextView
                android:id="@+id/tvHorarioContenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Lunes a Viernes: 8:00 h - 22:00 h\nFines de semana: 9:00h - 21:00h\n\nEl horario puede variar en dÃ­as festivos"
                android:fontFamily="@font/robotoregular"
                android:textSize="19sp"
                android:textColor="@color/white">
        </TextView>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>